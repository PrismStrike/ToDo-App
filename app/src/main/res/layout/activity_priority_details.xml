<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PriorityDetailsActivity"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_Prio"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prioritätsname" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_prio_speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="btnPrioSpeichernPressed"
        android:text="Speichern" />

    <Button
        android:id="@+id/btn_prio_loeschen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="btnPrioLoPressed"
        android:text="Löschen" />

    <Button
        android:id="@+id/btn_Prio_Zur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnPrioZurPressed"
        android:text="zurück" />
</LinearLayout>